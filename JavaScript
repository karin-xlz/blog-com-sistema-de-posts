document.addEventListener('DOMContentLoaded', function() {
    // Dados das dicas de autocuidado
    const autocuidadoTips = [
        {
            icon: "üíÜ‚Äç‚ôÄÔ∏è",
            title: "Respira√ß√£o Consciente",
            content: "Pare por 1 minuto e respire profundamente 3 vezes. Inspire por 4 segundos, segure por 4 e expire por 6. Isso acalma o sistema nervoso."
        },
        {
            icon: "üíß",
            title: "Hidrata√ß√£o",
            content: "Mantenha uma garrafa de √°gua sempre perto. Beber √°gua regularmente melhora a disposi√ß√£o, a pele e a digest√£o."
        },
        {
            icon: "üõå",
            title: "Rotina do Sono",
            content: "Estabele√ßa um hor√°rio fixo para dormir e acordar. Desligue as telas 1 hora antes de dormir para melhorar a qualidade do sono."
        },
        {
            icon: "üôÖ‚Äç‚ôÄÔ∏è",
            title: "Aprenda a Dizer N√£o",
            content: "Proteger seu tempo e energia n√£o √© ego√≠smo. Pratique dizer n√£o sem culpa para compromissos que n√£o te servem."
        },
        {
            icon: "üìù",
            title: "Journaling Matinal",
            content: "Escreva 3 coisas pelas quais voc√™ √© grata e 3 prioridades do dia. Isso traz clareza e foco para sua rotina."
        }
    ];

    // Elementos do slider
    const sliderTrack = document.querySelector('.slider-track');
    const dotsContainer = document.querySelector('.slider-dots');
    const prevBtn = document.querySelector('.prev-btn');
    const nextBtn = document.querySelector('.next-btn');

    let currentSlide = 0;

    // Criar slides
    function createSlides() {
        autocuidadoTips.forEach((tip, index) => {
            // Criar slide
            const slide = document.createElement('div');
            slide.className = 'slide';
            slide.innerHTML = `
                <div class="slide-icon">${tip.icon}</div>
                <h3>${tip.title}</h3>
                <p>${tip.content}</p>
            `;
            sliderTrack.appendChild(slide);

            // Criar pontos de navega√ß√£o
            const dot = document.createElement('div');
            dot.className = 'dot';
            dot.dataset.index = index;
            dotsContainer.appendChild(dot);
            
            dot.addEventListener('click', () => {
                goToSlide(index);
            });
        });

        updateDots();
    }

    // Atualizar pontos de navega√ß√£o
    function updateDots() {
        const dots = document.querySelectorAll('.dot');
        dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === currentSlide);
        });
    }

    // Navegar para slide espec√≠fico
    function goToSlide(index) {
        currentSlide = index;
        sliderTrack.style.transform = `translateX(-${currentSlide * 100}%)`;
        updateDots();
    }

    // Slide anterior
    function prevSlide() {
        if (currentSlide > 0) {
            currentSlide--;
        } else {
            currentSlide = autocuidadoTips.length - 1;
        }
        goToSlide(currentSlide);
    }

    // Pr√≥ximo slide
    function nextSlide() {
        if (currentSlide < autocuidadoTips.length - 1) {
            currentSlide++;
        } else {
            currentSlide = 0;
        }
        goToSlide(currentSlide);
    }

    // Event listeners
    prevBtn.addEventListener('click', prevSlide);
    nextBtn.addEventListener('click', nextSlide);

    // Iniciar slider
    createSlides();

    // Autoplay (opcional)
    let autoplay = setInterval(nextSlide, 5000);

    // Pausar autoplay quando interagir
    sliderTrack.addEventListener('mouseenter', () => {
        clearInterval(autoplay);
    });

    sliderTrack.addEventListener('mouseleave', () => {
        autoplay = setInterval(nextSlide, 5000);
    });

    // Sistema de posts existente (mantido do c√≥digo original)
    const postsData = [
        {
            id: 1,
            date: '22 de Maio, 2023',
            title: 'Mindfulness para Iniciantes',
            excerpt: 'Aprenda t√©cnicas simples de mindfulness para reduzir o estresse e aumentar o foco no seu dia a dia.',
            image: 'https://source.unsplash.com/random/600x400/?meditation'
        },
        {
            id: 2,
            date: '29 de Maio, 2023',
            title: 'Alimenta√ß√£o Consciente',
            excerpt: 'Como desenvolver uma rela√ß√£o saud√°vel com a comida e ouvir os sinais do seu corpo.',
            image: 'https://source.unsplash.com/random/600x400/?healthy,food'
        }
    ];
    
    const postsContainer = document.querySelector('.posts');
    
    function addPosts() {
        postsData.forEach(post => {
            const postElement = document.createElement('article');
            postElement.className = 'post';
            postElement.innerHTML = `
                <div class="post-image">
                    <img src="${post.image}" alt="${post.title}">
                </div>
                <div class="post-content">
                    <p class="post-date">${post.date}</p>
                    <h2 class="post-title">${post.title}</h2>
                    <p class="post-excerpt">${post.excerpt}</p>
                    <a href="#" class="read-more" data-id="${post.id}">Continuar Lendo</a>
                </div>
            `;
            postsContainer.appendChild(postElement);
        });
    }
    
    addPosts();
    
    const newsletterForm = document.querySelector('.newsletter-form');
    if (newsletterForm) {
        newsletterForm.addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Obrigada por assinar nossa newsletter! Em breve voc√™ receber√° nossas novidades.');
            newsletterForm.reset();
        });
    }
});
